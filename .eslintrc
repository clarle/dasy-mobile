{
  "parserOptions": {
    "ecmaVersion": "6",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "globals": {
    "ga": false
  },
  "rules": {
    "no-console": [2, { "allow": ["info", "warn", "error"] }],
    "no-unused-vars": [2, { "argsIgnorePattern": "next|reject" }],
    "react/jsx-filename-extension": 0
  }
}
